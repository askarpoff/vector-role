[Unit]
Description=Vector
Documentation=https://vector.dev
After=network-online.target
Requires=network-online.target

[Service]
User=root
Group=0
ExecStartPre=/usr/bin/vector validate --no-environment --config-toml /etc/vector/vector.toml
ExecStart=/usr/bin/vector --config-toml /etc/vector/vector.toml
ExecReload=/usr/bin/vector validate --no-environment --config-toml /etc/vector/vector.toml
Restart=no
AmbientCapabilities=CAP_NET_BIND_SERVICE
EnvironmentFile=-/etc/default/vector

[Install]
WantedBy=multi-user.target
